<%# resource_cache(resource) do %> 
<article>
  <%= container_tag('header') do %> 
  <div class='span12'>
    <header>
      <%= render_page_title(resource.title) %>
    </header><!-- end header -->
  </div>
  <% end %>
  <%= container_tag('body') do %>
    <% if resource.body.present?  %>
      <div class='span5'>
        <%= render_html_text(resource.body) %>
      </div>
      <div class='span7'>
        <%= render "inquiries/form" %>
      </div>
    <% else %>
      <div class='span12'>
        <%= render_slideshow_for(resource) %>
        <%= render_html_text(resource.body) %>
        <%= render "inquiries/form" %>
      </div> 
    <% end %> 
  <% end %>          
</article>
<%# end %>